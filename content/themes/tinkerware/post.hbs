{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
	the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
	<!-- POST START -->
	<article>
	<div class="entry">
		<div class="meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D, YYYY"}}</time>
			{{#if tags}}
				<span>Tags</span>
					{{#foreach tags}}
						<span><a href="{{url}}" title="{{name}}">{{name}}</a></span>
					{{/foreach}}
			{{/if}}
			<i class="fa fa-comment-o"></i><a href="{{url}}#disqus_thread">Comments</a>
		</div>
		<img src="{{image}}" alt="{{title}}"/>
		{{content}}
	</div>
	<!-- POST END -->
	
	<!-- SHARE -->
	<script type="text/javascript">
	    function pickPopupWindow(url, title, w, h) {
	        var left = (screen.width / 2) - (w / 2);
	        var top = (screen.height / 2) - (h / 2);
	        return window.open(url, title, 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=' + w + ', height=' + h + ', top=' + top + ', left=' + left);
	    }                            
	</script>

	<div class="single-section-container"><h6 class="single-section-title"><span class="single-section-text">Share</span></h6></div>
	<div class="sharing-buttons">
			<ul>
					<li><a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute='true'}}" onclick="pickPopupWindow(this.href, 'facebook-share', 580, 400); return false;"><i class="fa fa-facebook"></i></a></li>
					<li><a href="https://twitter.com/home?status={{url absolute='true'}}" onclick="pickPopupWindow(this.href, 'facebook-share', 580, 400); return false;"><i class="fa fa-twitter"></i></a></li>
					<li><a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());"><i class="fa fa-pinterest"></i></a></li>
					<li><a href="https://plus.google.com/share?url={{url absolute='true'}}" onclick="pickPopupWindow(this.href, 'google-plus-share', 550,530); return false;"><i class="fa fa-google-plus"></i></a></li>
					<li><a href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{url absolute='true'}}" onclick="pickPopupWindow(this.href, 'linkedin-share', 550,530); return false;"></i></a></li>
			</ul>
	</div>
 <!-- END OF SHARE -->

	{{#author}}
	<!-- AUTHOR BOX -->
 <div class="author-wrap">
   <div class="row">
     <div class="small-12 large-2 medium-3 columns">
       <div class="author-gravatar"><img src="{{image}}" alt=""/></div>
     </div>
     <div class="small-12 large-10 medium-9 columns">
       <div class="author-info">
         <div class="author author-title"><h6>{{name}}</h6></div>
         <div class="author-description"><p>{{bio}}</p></div>
       </div>
							<ul>
								{{#if facebook}}
									<li><a href="{{facebook_url}}"><i class="fa fa-facebook"></i>{{facebook}}</a></li>
								{{/if}}
								{{#if twitter}}
									<li><a href="{{twitter_url}}"><i class="fa fa-twitter"></i>{{twitter}}</a></li>
								{{/if}}
								{{#if location}}
									<li><i class="fa fa-map-marker"></i>{{location}}</li>
								{{/if}}
								{{#if website}}
									<li><a href="{{website}}"><i class="fa fa-link"></i>{{website}}</a></li>
								{{/if}}
							</ul>
     </div>
   </div>
 </div>
 <!-- END OF AUTHOR BOX -->
	{{/author}}

		{{! COMMENT START }}
		{{> "post/comments-disqus" }}
		{{! COMMENT END }}
	</article>
{{! POST END }}
{{/post}}