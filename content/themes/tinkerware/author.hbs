{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}

		{{! CATEGORY TITLE START }}
		<section class="category-archive-title author-archive-title">
			<h1>Author: <span>{{name}}</span></h1>
		</section>
		{{! CATEGORY TITLE END }}

		{{! AUTHOR START }}
		<div class="author-page-info-area">
			<div class="post-author">
				<aside class="author-info-area">
					<div class="image">
						<a class="avatar" href="{{url}}" style="background-image: url({{image}});"></a>
					</div>
					<div class="desc">
						<h4>About Me</h4>
						<h3>{{name}}</h3>
						<p>{{bio}}</p>
						<div class="author-social-link">
							<ul>
								{{#if facebook}}
									<li><a href="{{facebook_url}}"><i class="fa fa-facebook"></i>{{facebook}}</a></li>
								{{/if}}
								{{#if twitter}}
									<li><a href="{{twitter_url}}"><i class="fa fa-twitter"></i>{{twitter}}</a></li>
								{{/if}}
								{{#if location}}
									<li><i class="fa fa-map-marker"></i>{{location}}</li>
								{{/if}}
								{{#if website}}
									<li><a href="{{website}}"><i class="fa fa-link"></i>{{website}}</a></li>
								{{/if}}
							</ul>
						</div>
					</div>
				</aside>
			</div>
		</div>
		{{! AUTHOR END }}

{{/author}}


<div class="row">
	{{! HOME CONTENT START }}
	<div class="home-content">
		{{! SITE CONTENT LEFT START }}
		<div class="col-sm-8 col-xs-12 site-content-left">

			{{! POST LIST START }}
			<div class="home-two-post-list">
				{{> "loop-archive"}}
			</div>
			{{! POST LIST END }}

			{{! ADVERT START }}
			{{> "post/advert" }}
			{{! ADVERT END }}

			{{! PAGINATION START }}
			{{pagination}}
			{{! PAGINATION END }}

		</div>
		{{! SITE CONTENT LEFT END }}
		{{! SITE CONTENT RIGHT START }}
		<div class="col-sm-4 col-xs-12 site-content-right">
			<aside class="sidebar-right sidebar">

				{{! WIDGET START }}
                {{> "widgets/last-posts" }}
                {{! WIDGET END }}

				{{! WIDGET START }}
				{{> "widgets/social-links" }}
				{{! WIDGET END }}
					
				{{! WIDGET START }}
				{{> "widgets/twitter" }}
				{{! WIDGET END }}

				{{! WIDGET START }}
				{{> "widgets/facebook" }}
				{{! WIDGET END }}

				{{! WIDGET START }}
				{{> "widgets/advertisement" }}
				{{! WIDGET END }}

			</aside>
		</div>
		{{! SITE CONTENT RIGHT END }}
	</div>
	{{! HOME CONTENT END }}
</div>